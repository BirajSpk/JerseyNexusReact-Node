# Backend Environment Variables

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/jerseynexus"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=5003
NODE_ENV=development

# CORS (unified for both HTTP and WebSocket)
CORS_ORIGIN="http://localhost:3000,http://localhost:3001,https://jerseynexus.vercel.app"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"

# Cloudinary (Image Hosting)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
# Base folder to organize assets in Cloudinary (optional)
CLOUDINARY_BASE_FOLDER="jerseynexus"

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Admin
ADMIN_EMAIL="admin@jerseynexus.com"
ADMIN_PASSWORD="Admin123!@#"